@model IEnumerable<Monitor.Models.Availability>

<div class="container">
    <div class="row">
        @{
            foreach (var availability in Model)
            {
                <div class="col-md-3">
                    
                    <div class="panel panel-default">
                    <div class="panel-heading">Сайт: @availability.Site.Name</div>
                    <div class="panel-body">
                        @if (availability.State == true)
                        {
                            <div class="alert-success">
                                <p>Статус: <span class="glyphicon glyphicon-signal" aria-hidden="true"></span></p>
                            </div>
                        }
                        else
                        {
                            <div class="alert-danger">
                                <p>Статус: <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></p>
                            </div>
                        }
                        <hr />
                        <p>Обновление: @availability.Site.RefreshTime ms</p>
                    </div>
                    </div>
                </div>               
            }
        }
    </div>
</div>