@model Monitor.Models.Site
@using Monitor.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Editing");
}
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
        <li><a asp-action="Index" asp-controller="Sites">@ResourceProvider.GetResource("Currencies")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>

    <div class="container-fluid">
        <form asp-action="Edit">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-pencil"></span> @ResourceProvider.GetResource("Editing")</div>
                <div class="panel-body">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">@ResourceProvider.GetResource("Site")</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RefreshTime" class="control-label">@ResourceProvider.GetResource("RefreshTime")</label>
                        <input type="text" asp-for="RefreshTime" class="form-control" />
                        <span asp-validation-for="RefreshTime" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Edit")</button>
            </div>
            <a asp-action="Index" asp-controller="Sites" class="btn btn-primary btn-lg btn-block" Site="button">@ResourceProvider.GetResource("Back")</a>
        </form>
    </div>
</div>
