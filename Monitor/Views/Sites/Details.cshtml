@model Monitor.Models.Site

@{
    ViewBag.Title = "Сайт";
}
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">Домой</a></li>
        <li><a asp-action="Index" asp-controller="Sites">Сайты</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-eye-open"></span> Расширенная информация</div>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Идентификатор</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th scope="row">Сайт </th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">Обновление </th>
                        <td>@Model.RefreshTime</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary btn-lg btn-block" asp-route-id="@Model.Id">Редактировать</a>
        </div>
        <a asp-action="Index" asp-controller="Sites" class="btn btn-primary btn-lg btn-block" Site="button">Назад</a>
    </div>
</div>
