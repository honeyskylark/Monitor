@model Monitor.Models.User

@{
    ViewBag.Title = "Редактирование";
}
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">Домой</a></li>
        <li><a asp-action="Index" asp-controller="Users">Пользователи</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>

    <div class="container-fluid">
        <form asp-action="Edit">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-pencil"></span> Редактирование</div>
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">Имя</label>
                        <input type="text" asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Patronymic" class="control-label">Отчество</label>
                        <input type="text" asp-for="Patronymic" class="form-control" />
                        <span asp-validation-for="Patronymic" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Фамилия</label>
                        <input type="text" asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label">Логин</label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Пароль</label>
                        <input type="text" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">Роль</label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Редактировать</button>
            </div>
            <a asp-action="Index" asp-controller="Users" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
        </form>
    </div>

</div>


