@model IEnumerable<Monitor.Models.User>

@{
    ViewBag.Title = "Пользователи";
}
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">Домой</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>

    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> @ViewBag.Title</div>
            <table class="table">
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Действия</th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="form-group">
            <a asp-controller="Users" asp-action="Create" class="btn btn-primary btn-lg btn-block" role="button">Добавить</a>
        </div>
    </div>
</div>
